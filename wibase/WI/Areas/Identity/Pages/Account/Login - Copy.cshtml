@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

@section head {

    <link rel="stylesheet" href="/content/css/users.css">

}


<div class="container logincontainer">
    <form class="signup" id="account" method="post">
        <div class="header">
            <h3 class="pt-3">Log in</h3>
        </div>
        <div class="sep"></div>
        <div class="inputs">
            <div class="form-group">
                <input asp-for="Input.Email" type="email" placeholder="E-mail" autofocus required />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Input.Password" type="password" placeholder="Password" required />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkboxy">
                    <input name="cecky" id="checky" value="1" type="checkbox" asp-for="Input.RememberMe" />
                    <label class="terms" asp-for="Input.RememberMe">
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
            </div>
            <button id="submit" type="submit">Log in</button>
        </div>

        <div class="form-group pt-2">
            <p>
                <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
            </p>
            <p>
                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
            </p>
        </div>
    </form>
</div>


