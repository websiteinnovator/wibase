@page
@model LoginModel
@{
    ViewBag.NoHeader = "Yes";
    Layout = null;
    ViewData["Title"] = "Log in";
    ViewBag.PageName = "Account";
}


<!doctype html>
<html class="fixed">
<head>

    <!-- Basic -->
    <meta charset="UTF-8">

    <meta name="keywords" content="HTML5 Admin Template" />
    <meta name="description" content="Admin - Responsive HTML5 Template">
    <meta name="author" content="okler.net">

    <!-- Mobile Metas -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />

    <!-- Web Fonts  -->
    <link href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700,800|Shadows+Into+Light" rel="stylesheet" type="text/css">

    <!-- Vendor CSS -->
    <link rel="stylesheet" href="/p-orto-admin/vendor/bootstrap/css/bootstrap.css" />
    <link rel="stylesheet" href="/p-orto-admin/vendor/animate/animate.compat.css">

    <link rel="stylesheet" href="/p-orto-admin/vendor/font-awesome/css/all.min.css" />
    <link rel="stylesheet" href="/p-orto-admin/vendor/boxicons/css/boxicons.min.css" />
    <link rel="stylesheet" href="/p-orto-admin/vendor/magnific-popup/magnific-popup.css" />
    <link rel="stylesheet" href="/p-orto-admin/vendor/bootstrap-datepicker/css/bootstrap-datepicker3.css" />

    <!--(remove-empty-lines-end)-->
    <!-- Theme CSS -->
    <link rel="stylesheet" href="/p-orto-admin/css/theme.css" />


    <!--(remove-empty-lines-end)-->
    <!-- Theme Custom CSS -->
    <link rel="stylesheet" href="/p-orto-admin/css/custom.css">

    <!-- Head Libs -->
    <script src="/p-orto-admin/vendor/modernizr/modernizr.js"></script>
    <script src="/p-orto-admin/master/style-switcher/style.switcher.localstorage.js"></script>

</head>
<body>
    <!-- start: page -->
    <section class="body-sign">
        <div class="center-sign">
            <a href="/" class="logo float-left">
                <img src="" height="54" alt="Admin" />
            </a>

            <div class="panel card-sign">
                <div class="card-title-sign mt-3 text-right">
                    <h2 class="title text-uppercase font-weight-bold m-0"><i class="bx bx-user-circle mr-1 text-6 position-relative top-5"></i> Sign In</h2>
                </div>
                <div class="card-body">
                    <form action="" method="post">
                        <div class="form-group mb-3">
                            <label>Username</label>
                            <div class="input-group">
                                <input asp-for="Input.Email" type="text" class="form-control form-control-lg" />
                                <span class="input-group-append">
                                    <span class="input-group-text">
                                        <i class="bx bx-user text-4"></i>
                                    </span>
                                </span>
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group mb-3">
                            <div class="clearfix">
                                <label class="float-left">Password</label>
                                <a href="pages-recover-password.html" class="float-right">Lost Password?</a>
                            </div>
                            <div class="input-group">
                                <input asp-for="Input.Password" type="password" class="form-control form-control-lg" />
                                <span class="input-group-append">
                                    <span class="input-group-text">
                                        <i class="bx bx-lock text-4"></i>
                                    </span>
                                </span>
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-sm-8">
                                <div class="checkbox-custom checkbox-default">
                                    <input asp-for="Input.RememberMe" id="RememberMe" type="checkbox" />
                                    <label for="RememberMe">Remember Me</label>
                                </div>
                            </div>
                            <div class="col-sm-4 text-right">
                                <button type="submit" class="btn btn-primary mt-2">Sign In</button>
                            </div>
                        </div>

                        <div class="text-center">
                            <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                            @*<br />
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>*@
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
    <!-- end: page -->
    <!-- Vendor -->
    <script src="/p-orto-admin/vendor/jquery/jquery.js"></script>
    <script src="/p-orto-admin/vendor/jquery-browser-mobile/jquery.browser.mobile.js"></script>
    <script src="/p-orto-admin/vendor/jquery-cookie/jquery.cookie.js"></script>
    <script src="/p-orto-admin/master/style-switcher/style.switcher.js"></script>
    <script src="/p-orto-admin/vendor/popper/umd/popper.min.js"></script>
    <script src="/p-orto-admin/vendor/bootstrap/js/bootstrap.js"></script>
    <script src="/p-orto-admin/vendor/bootstrap-datepicker/js/bootstrap-datepicker.js"></script>
    <script src="/p-orto-admin/vendor/common/common.js"></script>
    <script src="/p-orto-admin/vendor/nanoscroller/nanoscroller.js"></script>
    <script src="/p-orto-admin/vendor/magnific-popup/jquery.magnific-popup.js"></script>
    <script src="/p-orto-admin/vendor/jquery-placeholder/jquery.placeholder.js"></script>

    <!-- Specific Page Vendor -->
    <!--(remove-empty-lines-end)-->
    <!-- Theme Base, Components and Settings -->
    <script src="/p-orto-admin/js/theme.js"></script>

    <!-- Theme Custom -->
    <script src="/p-orto-admin/js/custom.js"></script>

    <!-- Theme Initialization Files -->
    <script src="/p-orto-admin/js/theme.init.js"></script>
</body>
</html>

